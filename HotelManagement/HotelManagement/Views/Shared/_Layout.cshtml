<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Hotel Management</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <script src="javascript/jquery-1.2.3.js"type="text/javascript"></script>
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/themes/base/css", "~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

    </head>
    <body>
        <header>    
            <div class="content-wrapper">
                <div class="float-left">
                    <img src="LOGOHOTEL.jpg" align="left" width=100% height=100% />
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                        
                    </section>
                    <nav>
                     <ul id="menu">
                     <ul id="nav">
                            <li class="current">@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                     @if (Request.IsAuthenticated == true)
                     {
                         <li>@Html.ActionLink("Lista de Usuario", "Index", "usuario")</li>
                         <li>@Html.ActionLink("reservas", "reservar_habitaciones", "usuario")</li>
                     }
                         </ul>
                         </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
                <div class="float-right">
                    <ul id="social">
                        <li><a href="http://facebook.com" class="facebook">Facebook</a></li>
                        <li><a href="http://twitter.com" class="twitter">Twitter</a></li>
                    </ul>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>